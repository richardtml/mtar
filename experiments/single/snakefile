# Single-task experiments

from itertools import product


epochs = 500
dss = ('hmdb51', 'ucf101')
splits = (1,)
models = ('Conv2D', 'Conv2D1D', 'FullConv', 'Rec')
configs = (splits, models)


rule ucf101:
  run:
    for split, model in product(*configs):
      shell(
        "python train.py"
        f" --ds ucf101"
        f" --split {split}"
        f" --model {model}"
        f" --epochs {epochs}"
      )

rule hmdb51:
  run:
    for split, model in product(*configs):
      shell(
        "python train.py"
        f" --ds hmdb51"
        f" --split {split}"
        f" --model {model}"
        f" --epochs {epochs}"
      )
